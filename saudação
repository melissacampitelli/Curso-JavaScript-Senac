<body>
    <script>
        var datahora, xhora, xdia, saudacao;
        datahora = new Date();
        xhora = datahora.getHours();

        if (xhora >= 0 && xhora < 12) {
            saudacao = "bom dia!!"
        }
        if (xhora >= 12 && xhora < 18) {
            saudacao = "boa tarde!!"
        }
        if (xhora >= 18 && xhora < 23) {
            saudacao = "boa noite!!"
        }

        document.write(saudacao)
    </script>

</body>

